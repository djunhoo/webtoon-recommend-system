<div class="row">
    <% for(var i=0; i<comments.length; i++) { %>
    <div class="col-sm-6 col-md-4 col-lg-3 mt-4">
        <div class="card">
            <img class="card-img-top" src="<%= comments[i].webtoonId.img_src %>">
            <div class="card-block">
                <h4 class="card-title"><%= comments[i].webtoonId.name %></h4>
                <div class="meta">
                    <a href="#"><%= comments[i].webtoonId.writer %></a>
                </div>
                <div class="card-text">
                    <%= comments[i].content %>
                </div>
            </div>
            <div class="card-footer">
                <span class="float-right"><%= comments[i].regdate %></span>
            </div>
        </div>
    </div>
    <% } %>
</div>
