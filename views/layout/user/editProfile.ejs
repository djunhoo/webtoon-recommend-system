<h1>프로필 수정</h1>
<hr>
<div class="row">
    <!-- left column -->
    <form class="form-horizontal" role="form" method="post" action="/users/edit" enctype="multipart/form-data">
        <div class="col-md-3">
            <div class="text-center">
                <img src="/images/default.png" class="avatar img-circle" alt="avatar">
                <h6></h6>

                <input name="image" type="file" class="form-control" >
            </div>
        </div>

        <!-- edit form column -->
        <div class="col-md-9 personal-info">
            <div class="alert alert-info alert-dismissable">
                <a class="panel-close close" data-dismiss="alert">×</a>
                <i class="fa fa-coffee"></i> This is an <strong>.alert</strong>. Use this to show important messages to the user.
            </div>
            <!-- 에러 처리 -->
            <h3>개인화 정보</h3>
            <div class="form-group">
                <label class="col-lg-3 control-label">아이디:</label>
                <div class="col-lg-8">
                    <input class="form-control" type="text" value="<%= user.email %>" disabled>
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-3 control-label">이름:</label>
                <div class="col-lg-8">
                    <input class="form-control" name="name" type="text" value="<%= user.name %>">
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-3 control-label">나이:</label>
                <div class="col-lg-8">
                    <input class="form-control" name="age" type="text" value="<%= user.age %>">
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-3 control-label">직업:</label>
                <div class="col-lg-8">
                    <div class="ui-select">
                        <select id="job" name="job" class="form-control">
                            <% for(var i=0; i<jobs.length; i++) { %>
                                <option id="<%= jobs[i]._id %>" value="<%= jobs[i]._id %>"><%= jobs[i].jobName %></option>
                            <% } %>
                        </select>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-3 control-label">성별:</label>
                <div class="col-lg-8">
                    <div class="ui-select">
                        <select name="sex" class="form-control">
                            <option value="남자">남자</option>
                            <option value="여자">여자</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-3 control-label">선호 카테고리:</label>
                <div class="col-md-8">
                    <div class="ui-select">
                        <select name="category" class="form-control">
                            <% for(var i=0; i<categorys.length; i++) { %>
                                <option id="<%= categorys[i]._id %>" value="<%= categorys[i]._id %>"><%= categorys[i].category_name %></option>
                            <% } %>
                        </select>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-3 control-label">선호 플랫폼:</label>
                <div class="col-md-8">
                    <div class="ui-select">
                        <select name="platform" class="form-control">
                            <% for(var i=0; i<platforms.length; i++) { %>
                                <option id="<%= platforms[i]._id %>" value="<%= platforms[i]._id %>"><%= platforms[i].name %></option>
                            <% } %>
                        </select>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-3 control-label"></label>
                <div class="col-md-8">
                    <input type="submit" id="submit" class="btn btn-primary" value="수정하기">
                    <span></span>
                    <input type="reset" class="btn btn-default" value="리셋">
                </div>
            </div>
        </div>
    </form>

</div>
