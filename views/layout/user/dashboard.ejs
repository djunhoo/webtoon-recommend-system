<div class="rad-body-wrapper rad-nav-min">
    <div class="container-fluid">
        <br><br><br><br><br><br><br><br><br><br>
        <br><br><br>
        <div class="row">
            <div class="col-xs-12 col-md-6">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">웹툰 평가 분포</h3>
                    </div>
                    <div class="panel-body">
                        <canvas height="100" id="myChart"></canvas>
                        <br>
                        <div class="row" style="text-align: center;">
                            <div class="col-xs-4">
                                <div class="panel-group">
                                    <div class="panel panel-primary">
                                        <div class="panel-heading">별점 평균</div>
                                        <div class="panel-body">
                                            <%= ratingAvg %>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-4">
                                <div class="panel-group">
                                    <div class="panel panel-primary">
                                        <div class="panel-heading">별점 수</div>
                                        <div class="panel-body">
                                            <%= comments.length %>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-4">
                                <div class="panel-group">
                                    <div class="panel panel-primary">
                                        <div class="panel-heading">많이 준 별점</div>
                                        <div class="panel-body">
                                            <%= maxArray %>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
            <div class="col-xs-12 col-md-6">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">웹툰 선호 장르</h3>
                    </div>
                    <div class="panel-body">
                        <canvas height="100" id="myChart2"></canvas>
                    </div>

                </div>
            </div>
            <div class="col-lg-3 col-md-8 col-xs-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">웹툰 선호 플랫폼</h3>
                    </div>
                    <div class="panel-body">
                        <div id="donutChart" class="rad-chart"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    var ctx = document.getElementById("myChart");
    var ctx2 = document.getElementById("myChart2");
    var hi = <%- JSON.stringify(recommendCategory) -%>
    // console.log('gg', );
    // console.log('gg', [<%- recommendCategory.categoryData %>]);
    console.log('hi=', hi.categoryData)
    var data = {
    labels: hi.categoryData,
    datasets: [
        {
            data: [<%- recommendCategory.categoryLabel %>],
            backgroundColor: [
                "#FF6384",
                "#63FF84",
                "#84FF63",
                "#8463FF",
                "#6384FF"
            ]
        }]
};
var chartOptions = {
  rotation: -Math.PI,
  cutoutPercentage: 30,
  circumference: Math.PI,
  legend: {
    position: 'left'
  },
  animation: {
    animateRotate: false,
    animateScale: true
  }
};
    var pieChart = new Chart(ctx2, {
        type: 'pie',
        data: data,
        options: chartOptions
    });
    var myChart = new Chart(ctx, {
        type: 'bar',
        data: {
            labels: [<%= chartLabel %>],
            datasets: [{
                data: [<%= chartDatas %>],
                backgroundColor: [
                    'rgba(255, 99, 132, 0.2)',
                    'rgba(54, 162, 235, 0.2)',
                    'rgba(255, 206, 86, 0.2)',
                    'rgba(75, 192, 192, 0.2)',
                    'rgba(153, 102, 255, 0.2)',
                    'rgba(255, 159, 64, 0.2)',
                    'rgba(255, 99, 132, 0.2)',
                    'rgba(255, 99, 132, 0.2)',
                    'rgba(255, 99, 132, 0.2)',
                    'rgba(255, 99, 132, 0.2)'
                ],
                borderColor: [
                    'rgba(255,99,132,1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)',
                    'rgba(75, 192, 192, 1)',
                    'rgba(153, 102, 255, 1)',
                    'rgba(255, 159, 64, 1)',
                    'rgba(255,99,132,1)',
                    'rgba(255,99,132,1)',
                    'rgba(255,99,132,1)',
                    'rgba(255,99,132,1)'
                ],
                borderWidth: 1
            }]
        },
        options: {
            legend: {
                display: false
            },
            scales: {
                yAxes: [{
                    ticks: {
                        beginAtZero: true
                    }
                }]
            },
            title: {
                display: true,
                text: '별점 평가 분포도'
            }
        }
    });
</script>
